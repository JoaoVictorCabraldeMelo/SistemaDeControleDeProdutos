{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Produtos",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "nome": {
            "type": "string"
        },
        "preco": {
            "type": "number"
        },
        "descricao": {
            "type": "string"
        }
    }
}