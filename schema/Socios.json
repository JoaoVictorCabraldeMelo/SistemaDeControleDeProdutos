{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Socios",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "nome": {
            "type": "string"
        },
        "cpf": {
            "type": "string"
        },
        "rg": {
            "type": "string"
        },
        "genero": {
            "type": "string"
        },
        "filiacao": {
            "type": "string"
        },
        "estado_civil": {
            "type": "string"
        },
        "telefone": {
            "type": "array",
            "additionalItems": true,
            "minItems": 1,
            "uniqueItems": false,
            "items": {
                "type": "string"
            }
        },
        "dataNascimento": {
            "type": "string",
            "format": "date-time"
        },
        "endereco": {
            "type": "object",
            "properties": {
                "rua": {
                    "type": "string"
                },
                "numero": {
                    "type": "number"
                },
                "cep": {
                    "type": "string"
                },
                "cidade": {
                    "type": "string"
                },
                "estado": {
                    "type": "string"
                },
                "pais": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "rua",
                "numero",
                "cep",
                "cidade",
                "estado",
                "pais"
            ]
        },
        "cartoes": {
            "type": "array",
            "additionalItems": true,
            "minItems": 0,
            "uniqueItems": false,
            "items": {
                "type": "object",
                "properties": {
                    "valor": {
                        "type": "number",
                        "minimum": 0
                    },
                    "bloqueado": {
                        "type": "boolean"
                    },
                    "pago": {
                        "type": "boolean"
                    },
                    "tipo": {
                        "type": "string",
                        "enum": [
                            "normal",
                            "especial"
                        ]
                    },
                    "compras": {
                        "type": "array",
                        "additionalItems": true,
                        "minItems": 0,
                        "uniqueItems": false,
                        "items": {
                            "type": "object",
                            "properties": {
                                "produto": {
                                    "type": "string"
                                },
                                "valor": {
                                    "type": "number"
                                },
                                "data": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            },
                            "additionalProperties": false,
                            "required": [
                                "produto",
                                "valor",
                                "data"
                            ]
                        }
                    }
                },
                "additionalProperties": false,
                "required": [
                    "valor",
                    "tipo",
                    "compras"
                ]
            }
        },
        "naturalidade": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "escolaridade": {
            "type": "string"
        },
        "cargo": {
            "type": "string"
        },
        "tipo": {
            "type": "string",
            "enum": [
                "dependente",
                "comun"
            ]
        }
    },
    "required": [
        "id",
        "nome",
        "cpf",
        "rg",
        "genero",
        "filiacao",
        "estado_civil",
        "telefone",
        "dataNascimento",
        "endereco",
        "cartoes",
        "naturalidade",
        "email",
        "escolaridade",
        "cargo",
        "tipo"
    ]
}